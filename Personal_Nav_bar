	<script>

		let direction = "vertical";
		if (direction === "vertical") {
			document.head.insertAdjacentHTML("beforeend", `<style>.navMenu a {display: block; text-align:left; margin:7px} i{width:15px; margin-right:5px} .navMenu{margin:3px}</style>`)
		}


		function navigate(id) {

			if (id == 'home')
				window.open("https://www.notion.so/Workout-Dashboard-0c110f6e698d42a6882f16eda00f6ae5?pvs=4", "_parent").focus();
			else if (id == "goals")
				window.open("https://www.notion.so/Goals-and-Rewards-b100fbe49a2d4ff8895f8891313bcf31?pvs=4", "_parent").focus();
			else if (id == "weight")
				window.open("https://www.notion.so/Weight-Tracker-69862cacc56d49d9b317bb8e87c823bc?pvs=4", "_parent").focus();
			else if (id == "workouts")
				window.open("https://www.notion.so/b42a7a1e93c74ae3b8813286b9fa03bc?v=5b212bb720cf469f8e15b6754e09860a&pvs=4", "_parent").focus();
			else if (id == "week")
				window.open("https://www.notion.so/1d855b74819c474ca036243ce00fbeb4?v=2e8f9277537e412f895c5ca2cfbd6c02&pvs=4", "_parent").focus();
			else if (id == "meals")
				window.open("https://www.notion.so/Meal-Planner-84f704f61cbc4ef293b8c1010fdeaa16?pvs=4", "_parent").focus();
		}
	</script>


