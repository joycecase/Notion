	<nav class="navMenu  border background">
		<a id="home" onclick="navigate(this.id)" href="#"> <i class="fa-solid fa-house-chimney" style="color: #fcae82;"></i> Home</a>
  		<a id="goals" onclick="navigate(this.id)" href="#"> <i class="fa-solid fa-trophy" style="color: #fcae82;"></i></i> Goals</a>
		<a id="weight" onclick="navigate(this.id)" href="#"> <i class="fa-solid fa-weight-scale" style="color: #fcae82; "></i></i> Weight Tracking</a>
		<a id="workouts" onclick="navigate(this.id)" href="#"> <i class="fa-solid fa-watch-fitness"  style="-color: #fcae82;"></i> Workouts</a>
		<a id="week" onclick="navigate(this.id)" href="#"> <i class="fa-solid fa-weight-scale"  style="-color: #fcae82;"></i> Weekly Tracking</a>
